<h2 class="center">Friend's Characters</h2>
<hr />
<div class="row">
  <div class="col s12 m6">
    <button class="btn" id="toggle">Show Form</button>
    <ul id="char-list">
      <% @characters.each do |character| %>
        <%= render partial: 'character', locals: {character: character} %>
        
        <li
          class="char-item"
          data-id=<%= character.id %>
          data-name="<%= character.name %>"
        >
          <%= character.name %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col s12 m6" id="quote-list">
    <h3 id="character">Quotes</h3>
    <ul id="quotes">
    </ul>
  </div>
</div>
